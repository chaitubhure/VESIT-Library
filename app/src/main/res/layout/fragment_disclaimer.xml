<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFD8DC"
    android:screenOrientation="portrait">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="2dp">

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:id="@+id/card_view1"
                card_view:cardBackgroundColor="#ffffff"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="3dp"
                card_view:contentPadding="5dp"
                android:background="@color/bg_screen2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="60dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/disclaimer_name"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:fontFamily="Sans-serif"
                    android:text="@string/disclaimer_title"
                    android:textSize="30sp"
                    android:paddingLeft="10dp"
                    android:gravity="top|center_horizontal"
                    android:textAlignment="center"
                    tools:ignore="RtlHardcoded,RtlSymmetry" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:id="@+id/card_view"
                card_view:cardBackgroundColor="#ffffff"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="2.5dp"
                card_view:contentPadding="5dp"
                android:background="@color/bg_screen2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/toolbar"
                tools:ignore="ObsoleteLayoutParam">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/disclaimer_1"
                    android:layout_marginTop="17dp"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:fontFamily="Sans-serif"
                    android:text="@string/disclaimer_body_1"
                    android:textSize="20sp"
                    android:paddingLeft="10dp"
                    tools:ignore="RtlHardcoded,RtlSymmetry" />

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/disclaimer_body_2"
                android:id="@+id/disclaimer_3"
                android:textSize="20sp"
                android:fontFamily="Sans-serif"
                android:textColor="#000000"
                android:layout_marginTop="185dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                tools:ignore="RtlHardcoded" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/disclaimer_2"
                    android:textSize="20sp"
                    android:fontFamily="Sans-serif"
                    android:textColor="#000000"
                    android:text="@string/disclaimer_body_3"
                    android:layout_marginTop="100dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    tools:ignore="RtlHardcoded" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4. The Availability of books can be less than expected because of removing of old edition book and reserved for reference section from list so consider it as +/-5 as count "
                    android:id="@+id/disclaimer_4"
                    android:textSize="20sp"
                    android:fontFamily="Sans-serif"
                    android:textColor="#000000"
                    android:layout_marginTop="250dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    tools:ignore="RtlHardcoded" />

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>