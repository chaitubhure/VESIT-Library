<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:screenOrientation="portrait"
    android:layout_margin="5dp"
    android:background="#CFD8DC"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="3dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/t0"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:textColor="#000000"
        android:fontFamily="Sans-serif"
        android:text="Hello Everyone,"
        android:textSize="28sp"
        android:paddingLeft="10dp"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        tools:ignore="RtlCompat" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="495dp"
        android:layout_marginTop="50dp"
        android:id="@+id/holder_relative_layout"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/t1"
            android:layout_marginTop="-10dp"
            android:textSize="20sp"
            android:fontFamily="Sans-serif"
            android:textColor="#000000"
            android:text="              We are Happy to Introduce 1st VESIT-Library Android App."
            android:paddingLeft="15dp"
            android:paddingRight="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is First Release Of Library App Which Gives features like:-"
            android:id="@+id/t2"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:fontFamily="Sans-serif"
            android:textColor="#000000"
            android:paddingLeft="15dp"
            android:paddingRight="5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A.You can check your Issued Book Status."
            android:id="@+id/t3"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:fontFamily="Sans-serif"
            android:textColor="#000000"
            android:paddingLeft="50dp"
            android:paddingRight="5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B.You can Search For Our Library Books for any Department and get its availability status."
            android:id="@+id/t4"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:fontFamily="Sans-serif"
            android:textColor="#000000"
            android:paddingLeft="50dp"
            android:paddingRight="5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C. All Reference Section Credentials at one place , Easy to access."
            android:id="@+id/t5"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:fontFamily="Sans-serif"
            android:textColor="#000000"
            android:paddingLeft="50dp"
            android:paddingRight="5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="As This is First Release of App it may crash unexpectedly and might have some bugs so please give us feedback it will solved as soon as possible"
            android:id="@+id/t6"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:fontFamily="Sans-serif"
            android:textColor="#000000"
            android:paddingLeft="15dp"
            android:paddingRight="5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </LinearLayout>


</android.support.v7.widget.CardView>
